{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@routers/*": ["routers/*"],
      "@controllers/*": ["controllers/*"],
      "@config/*": ["config/*"],
      "@models/*": ["models/*"],
    },
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
